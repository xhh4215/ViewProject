<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ViewRealActivity">


    <Button
        android:id="@+id/methodOne"
        style="@style/text_flag_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/getSizeOne" />

    <Button
        android:id="@+id/methodTwo"
        style="@style/text_flag_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/getSizeTwo" />

    <Button
        android:id="@+id/methodThree"
        style="@style/text_flag_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/getSizeThree" />


    <com.xh.kotlin.kotlin.view.DrawView
        android:id="@+id/drawView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlack"
        android:text="@string/app_name" />

</LinearLayout>